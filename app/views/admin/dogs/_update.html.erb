<div class="row droidFont">

    <hr class="separatorLine">

    <!-- dog image ////////////////////////////////////////////// -->
    
    <div class="col-lg-3 col-md-6 col-sm-12 col-xs-12 paddingTopBot15px">
      <%= image_tag(update.image_url, class: "img-responsive text-center") if update.image_url.present? %>
    </div>  
    
    <!-- dog update content ///////////////////////////////////// -->
    
    <div class="col-lg-9 col-md-6 col-sm-12 col-xs-12">

      <!-- date //////////// -->	

      <div class="paddingTopBot15px">

      	<strong><%= update.date.strftime("%d %B %Y")  %></strong>

      </div>


      <!-- text //////////// -->	

      <div class="paddingTopBot15px updateTextContainer">

      	<%= truncate(update.text,length:400) %>
      	
      </div>

      <!-- Read More / Edit / Delete buttons //////////// -->

      <div class="paddingTopBot15px">

        <%= link_to 'Read More', admin_dog_update_path(update), :class => 'btn btnWhite fontSizeSmall ' %> &nbsp;
      
        <%= link_to 'Edit', edit_admin_dog_update_path(update), :class => 'btn btnWhite fontSizeSmall ' %> &nbsp;

        <%= link_to 'Delete', [:admin, :dog, update], :class => 'btn btnWhite fontSizeSmall', method: :delete, data: { confirm: 'Are you sure?' } %>

      </div>
    
    </div> 

  </div>



