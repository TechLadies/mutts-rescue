
<tr>
    <td class="droidFont fontSizeMedium"><%= sponsorship.created_at.strftime("%d %b %Y") %></td>
    <td class="droidFont fontSizeMedium"><%= number_to_currency(sponsorship.amount) %></td>
    <td class="droidFont fontSizeMedium"><%= sponsorship.person.name %></td>
    <td class="droidFont fontSizeMedium"><%= sponsorship.person.phone %></td>
    <td class="droidFont fontSizeMedium"><%= mail_to sponsorship.person.email, sponsorship.person.email %></td>
    <td class="droidFont fontSizeMedium"><%= link_to 'Show', admin_sponsorship_path(sponsorship), :class => 'btn btnWhite fontSizeSmall' %></td>
    <td class="droidFont fontSizeMedium"><%= link_to 'Edit', edit_admin_sponsorship_path(sponsorship), :class => 'btn btnWhite fontSizeSmall'  %></td>
    <td class="droidFont fontSizeMedium"><%= link_to 'Delete', [:admin, sponsorship], :class => 'btn btnWhite fontSizeSmall', method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>
