<p id="notice"><%= notice %></p>

<div class="row dogUpdateFont">

	<!-- side column -->
	<div class="col-lg-2 col-md-12 col-sm-12 col-xs-12 text-center">&nbsp;</div>


	<!-- center content -->
	<div class="col-lg-8 col-md-12 col-sm-12 col-xs-12">

		<div class= "row panel droidFont fontSizeLarge">

			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 paddingBot10px ">
				<strong>Name</strong>
			</div>

			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 paddingBot20px ">
				<%= @person.name %>
			</div>

			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 paddingBot10px ">
				<strong>Phone</strong>
			</div>

			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 paddingBot20px ">
				<%= @person.phone %>
			</div>

			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 paddingBot10px ">
				<strong>Email</strong>
			</div>

			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 paddingBot20px ">
				<%= mail_to @person.email, @person.email %>
			</div>


			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 paddingBot10px ">
				<strong>Bank Account</strong>
			</div>

			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 paddingBot20px ">
				<%= @person.bank_acct %>
			</div>

			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 paddingBot10px ">
				<strong>Address</strong>
			</div>

			<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 paddingBot10px ">
				<%= @person.address %>
			</div>


			<!-- buttons -->

			<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 text-center paddingTopBot15px  ">

				<%= link_to 'Edit', edit_admin_person_path(@person), :class => 'btn btnGreen btn-block fontSizeMedium' %>


			</div>

			<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 text-center paddingTopBot15px ">

				<%= link_to 'Back', admin_people_path, :class => 'btn btnWhite btn-block fontSizeMedium'  %>
			</div>

			<hr>

			<!-- Sponsorship content  -->

			<div class="container">

			  <div class="row paddingTopBot15px">

			    <h2>Sponsorship</h2>

			  </div>

			  <div class="row paddingTopBot15px">

			    <div class="col-lg-4 col-md-0 col-sm-0 col-xs-0"></div>

			    <div class="col-lg-4 col-md-6 col-sm-12 col-xs-12"></div>

			    <div class="col-lg-4 col-md-6 col-sm-0 col-xs-0">

			      <%= link_to 'New Sponsorship', new_admin_sponsorship_path(), :class => 'btn btnGreen btn-block fontSizeMedium' %>

			    </div>

			  </div>

			  <div class="row paddingTopBot15px">

			      <table class="table droidFont fontSizeMedium">
			        <thead>
			          <tr class="bgDarkGrey fontWhite">
			            <th>Date</th>
			            <th>Amount</th>
			            <th>Name</th>
			            <th>Phone</th>
			            <th>Email</th>
			            <th colspan="3"></th>
			          </tr>
			        </thead>

			        <tbody>

			          <%= render partial: "sponsorship", collection: @person.sponsorships %>

			        </tbody>
			      </table>

			  </div>

			</div>


		</div>

	</div>

	<!-- side column -->
	<div class="col-lg-2 col-md-12 col-sm-12 col-xs-12 text-center">&nbsp;</div>

</div>
