<p id="notice"><%= notice %></p>

<h1>Updates</h1>

<table>
  <thead>
    <tr>
      <th>DogID</th>
      <th>Image</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @updates.each do |update| %>
      <tr>
        <td><%= update.dog_id %></td>
        <td><%= image_tag(update.image_url, class: "img-responsive text-center") if update.image_url.present? %></td>
        <td><%= update.text %></td>
        <td></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>





