<%= form_for([:admin, :dog, @update]) do |f| %>
 
  <% if @update.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@update.errors.count, "error") %> prohibited this dog update from being saved:</h2>

      <ul>
      <% @update.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row ">

    <!-- side column -->  
    <div class="col-lg-3 col-md-12 col-sm-12 col-xs-12 text-center">&nbsp;</div>

    <!-- center content -->
    <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">  

      <div class= "row panel droidFont fontSizeLarge">

        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 paddingTopBot20px ">

          <%= image_tag(@update.image_url, class: "img-responsive text-center") if @update.image_url.present? %>
        
        </div>         

        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 field paddingBot20px">
            <%= f.label :date %>
            <%= f.date_select :date %>
        </div>

        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 field paddingBot20px">
          <%= f.text_area :text, class: 'updateTextContainer' %>
        </div>

        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 field paddingBot20px">
          <%= f.label :image_url, 'Upload Image:' %>
          <%= f.filepicker_field :image_url, dragdrop: true %>
        </div>
          
        <!-- buttons -->
          
        <div class="col-lg-6 col-md-12 col-sm-12 col-xs-12 actions paddingBot20px">
          <%= f.submit "Save", class: 'btn btnGreen btn-block fontSizeLarge' %>
        </div>

        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 text-center paddingBot20px">

        <%= link_to 'Cancel', admin_dog_path(params[:dog_id]), :class => 'btn btnWhite btn-block fontSizeLarge'  %>
      </div>  

      </div>  

    </div>  

  <!-- side column -->  
  <div class="col-lg-3 col-md-12 col-sm-12 col-xs-12 text-center">&nbsp;</div>

</div>


<% end %>