<div class ="container-fluid text-center">
<% if params[:is_hdb_approved].nil? || params[:is_hdb_approved] == 'any' %>
<div class="btn-group">
  <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
    Is HDB Approved? <span class="caret"></span></button>
    <ul class="dropdown-menu" role="menu">
      <li><%= link_to 'Yes', root_path(@search_params.merge(is_hdb_approved: "hdb"))  %></li>      
      <li><%= link_to 'No', root_path(@search_params.merge(is_hdb_approved: "not_hdb"))  %></li>
    </ul>
  </div>
  <% end %>

  <% if params[:is_hdb_approved] == 'hdb' %>
  <div class="btn-group">
    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
      HDB Approved: Yes <span class="caret"></span></button>
      <ul class="dropdown-menu" role="menu">
       <li><%= link_to 'Is HDB approved?', root_path(@search_params.merge(is_hdb_approved: "any"))  %></li>
       <li><%= link_to 'HDB approved: No', root_path(@search_params.merge(is_hdb_approved: "not_hdb"))  %></li>      
     </ul> 
   </div>
   <% end %>

   <% if params[:is_hdb_approved] == 'not_hdb' %>
   <div class="btn-group">
    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
      HDB Approved: No <span class="caret"></span></button>
      <ul class="dropdown-menu" role="menu">
       <li><%= link_to 'Is HDB Approved?', root_path(@search_params.merge(is_hdb_approved: "any"))  %></li>
       <li><%= link_to 'HDB approved: Yes', root_path(@search_params.merge(is_hdb_approved: "hdb"))  %></li>
     </ul>
   </div>
   <% end %>


   <% if params[:gender].nil? || params[:gender] == 'any' %>
   <div class="btn-group">
    <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
      Any gender <span class="caret"></span></button>
      <ul class="dropdown-menu" role="menu">
        <li><%= link_to 'Female', root_path(@search_params.merge(gender: "female"))  %></li>      
        <li><%= link_to 'Male', root_path(@search_params.merge(gender: "male"))  %></li>
      </ul>
    </div>
    <% end %>

    <% if params[:gender] == 'male' %>
    <div class="btn-group">
      <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
        Male <span class="caret"></span></button>
        <ul class="dropdown-menu" role="menu">
         <li><%= link_to 'Any gender', root_path(@search_params.merge(gender: "any"))  %></li>
         <li><%= link_to 'Female', root_path(@search_params.merge(gender: "female"))  %></li>      
       </ul> 
     </div>
     <% end %>

     <% if params[:gender] == 'female' %>
     <div class="btn-group">
      <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
        Female <span class="caret"></span></button>
        <ul class="dropdown-menu" role="menu">
         <li><%= link_to 'Any gender', root_path(@search_params.merge(gender: "any"))  %></li>
         <li><%= link_to 'Male', root_path(@search_params.merge(gender: "male"))  %></li>
       </ul>
     </div>
     <% end %>

     <% if params[:born_on].nil? || params[:born_on] == 'any' %>
     <div class="btn-group">
      <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
        Any Age <span class="caret"></span></button>
        <ul class="dropdown-menu" role="menu">
          <li><%= link_to 'Puppy', root_path(@search_params.merge(born_on: "puppy"))  %></li>      
          <li><%= link_to 'Adult', root_path(@search_params.merge(born_on: "adult"))  %></li>
        </ul>
      </div>
      <% end %>

      <% if params[:born_on] == 'puppy' %>
      <div class="btn-group">
        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
          Puppy <span class="caret"></span></button>
          <ul class="dropdown-menu" role="menu">
           <li><%= link_to 'Any age', root_path(@search_params.merge(born_on: "any"))  %></li>
           <li><%= link_to 'Adult', root_path(@search_params.merge(born_on: "adult"))  %></li>      
         </ul> 
       </div>
       <% end %>

       <% if params[:born_on] == 'adult' %>
       <div class="btn-group">
        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
          Adult <span class="caret"></span></button>
          <ul class="dropdown-menu" role="menu">
           <li><%= link_to 'Any age', root_path(@search_params.merge(born_on: "any"))  %></li>
           <li><%= link_to 'Puppy', root_path(@search_params.merge(born_on: "puppy"))  %></li>
         </ul>
       </div>
       <% end %>
</div>       
