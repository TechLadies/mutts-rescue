
          <div class="row text-center">
            <div class="col-sm-4">
              <div class="thumbnail">
                <img src="dog.jpg" alt="Dog">
                <p><strong><%= dog.name %></strong></p>
                <p><%= dog.born_on %></p>
                <p><%= dog.gender %></p>
                <p><%= dog.quote %></p>
                <p><%= dog.adoption_status %></p>

                <%= link_to 'About Me', about_dog_path(dog.id) %>  

                <button class="btn" data-toggle="modal" href="#myModal" >More about Me</button>
                
                
                


                <!-- Used to open the Modal -->

                <!-- Modal -->
                <div class="modal fade" id="myModal" role="dialog">
                  <div class="modal-dialog">
                   
                    <!-- Modal content-->
                    <div class="modal-content">
                      <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4><%= dog.name %></h4>
                      </div>
                      <div class="modal-body">
                        <div class="thumbnail">
                          <img src="dog.jpg" alt="dog">
                        </div>
                        <form role="form">
                          <div class="form-group">
                            <label for="psw">
                              <p>Story: <%= dog.background_story %> </p>
                              <p>Birthdate: <%= dog.born_on %></p>
                              <p> Gender:<%= dog.gender %></p>
                              <p> "<%= dog.quote %>"" </p>

                            </label>

                            
                          </div>
                          
                          
                        </form>
                      </div>
                      <div class="modal-footer">
                        
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
